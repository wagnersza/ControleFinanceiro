<% @sub_categorias.each do |sub_categoria| %>
  <tr>
    <td><%= sub_categoria.nome %></td>
    <td><%= sub_categoria.descricao %></td>
    <td><%= sub_categoria.categoria %></td>
    <td><%= link_to 'Show', sub_categoria %></td>
    <td><%= link_to 'Edit', edit_sub_categoria_path(sub_categoria) %></td>
